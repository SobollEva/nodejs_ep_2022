{
    "include": ["src"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "outDir": "dist",
        "moduleResolution": "node",
        "module": "esnext",
        "target": "es5",
        "lib": ["es5", "es6", "dom"],
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true
    }
}
